
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index Page</title>
</head>
<body>
    <div>
        <table border="2" width="800" align="center" cellspacing="5" cellpadding="5">
            <tr style="background-color:darkslategray; color:white;text-align:center">
                <td colspan="2">DXC | Hyderabad</td> @*Header*@
            </tr>
            <tr height ="300px">
                <td width="250px"> @*Column -1*@
                    <ul>
                        <li>@Html.ActionLink("Home", "Home")</li>
                        <li>@Html.ActionLink("About", "About")</li>
                        <li>@Html.ActionLink("Contact", "Contact")</li>
                    </ul>
                </td>
                <td width="550"> @*Column-2*@
                    @RenderBody() @*it is a function , that specify the page contains must be rendered*@
                </td>
            </tr>
            <tr>
                <td  colspan="2" style="background-color:darkolivegreen;color:white;text-align:center"> @*footer*@
                    &copy; Copyright 2020      <br />
                    Faculty | Courses | Projects
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
